<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- Spring入门的配置 -->
    <bean id="userDao" class="com.example.springlearn.dao.impl.UserDaoImpl" init-method="setUp"
          destroy-method="destroy">
        <property name="name" value="zhuyunsheng"></property>
    </bean>
    <bean id="customerDao" class="com.example.springlearn.dao.impl.CustomerDaoImpl" init-method="setup"
          destroy-method="destroy">
    </bean>
    <!--有参创建-->
    <bean id="bean1" class="com.example.springlearn.demo3.Bean1">
        <constructor-arg name="name" value="test"></constructor-arg>
    </bean>
    <!-- 无参创建 -->
    <bean id="bean2" class="com.example.springlearn.demo3.Bean2">
    </bean>
    <!--静态工厂的实例化方式-->
    <bean id = "bean3" class="com.example.springlearn.demo3.BeanFactory" factory-method="createBean2"></bean>
    <!--实例工厂实例化的方式-->
    <bean id="bean3Factory" class="com.example.springlearn.demo3.Bean3Factory" ></bean>
    <bean id ="bean4" factory-bean="bean3Factory" factory-method="createBean3"></bean>
</beans>